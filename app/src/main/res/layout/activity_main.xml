<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.arsalan.randomfacts.MainActivity"
    android:background="#60b3ea"
    android:id="@+id/main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To Our Random Facts App"
        android:autoText="false"
        android:fontFamily="@string/app_name"
        android:textAlignment="center"
        android:textSize="15pt"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Sports Facts"
        android:id="@+id/Sportsbutton"
        android:background="@drawable/button_border_2"
        android:clickable="true"
        android:onClick="goToSportsFacts"
        android:layout_below="@+id/Crazybutton"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/Crazybutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Crazy Facts"
        android:id="@+id/Crazybutton"
        android:background="@drawable/button_border"
        android:clickable="true"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quit"
        android:id="@+id/QuitButton"
        android:background="@drawable/button_border_purple"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="quit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/setting"
        android:background="@drawable/button_border_yellow"
        android:onClick="settings"
        android:layout_below="@+id/Sportsbutton"
        android:layout_alignEnd="@+id/Sportsbutton"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maps"
        android:id="@+id/mapsbutton"
        android:background="@drawable/button_border_blue"
        android:layout_below="@+id/setting"
        android:layout_alignEnd="@+id/setting"
        android:layout_alignParentStart="true"
        android:onClick="openmaps" />

</RelativeLayout>
